spring.profiles.active=dev
server.port=8888
spring.application.name=ms-config


##########################################################
#### Configuration for picking configuration file of 
#### different microservices from a centralized location
##########################################################


#Here, we are telling the config server that from which location it has to pick the configuration file.
spring.cloud.config.server.git.uri=https://github.com/sanjeev167/
#Now, we are telling the config server which profile-based config file it has to pick
spring.cloud.config.server.git.search-paths=nse-ms-config/{ms-user}/{profile}

##############################################################
#### Configuration for registering itself with Eureka Server
##############################################################

eureka.instance.hostname=localhost
eureka.client.registerWithEureka=true
eureka.client.fetchRegistry=true
eureka.client.serviceUrl.defaultZone=http://localhost:8761/eureka






